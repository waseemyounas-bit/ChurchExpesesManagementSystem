                    <span class="dash-widget-bg3"><i class="fa fa-dollar" aria-hidden="true"></i></span>
                    <div class="dash-widget-info text-right">
                        <h3>@Model.ThismonthExpense</h3>
                        <span class="widget-title3">Expenses <i class="fa fa-check" aria-hidden="true"></i></span>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-sm-6 col-lg-6 col-xl-3">
                <div class="dash-widget">
                    <span class="dash-widget-bg4"><i class="fa fa-users" aria-hidden="true"></i></span>
                    <div class="dash-widget-info text-right">
                        <h3>@Model.Members</h3>
                        <span class="widget-title4">Members <i class="fa fa-check" aria-hidden="true"></i></span>
                    </div>
                </div>
            </div>
        </div>
      
        <div class="row">
            <div class="col-12 col-md-12 col-lg-12 col-xl-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title d-inline-block">Recent Donations</h4> <a href="donations" class="btn btn-primary float-right">View all</a>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead class="d-none">
                                    <tr>
                                        <th>Donor</th>
                                        <th>Donor Type</th>
                                        <th>Type</th>
                                        <th>Date</th>
                                        <th>Amount</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var donation in Model.DonationList)
                                    {
                                        <tr>
                                            <td>
                                                @(donation.Member != null
                                                                                            ? donation.Member.FName + " " + donation.Member.LName
                                                                                            : donation.Visitor.FName + " " + donation.Visitor.LName)
                                        </td>
                                        <td>
                                            @(donation.Member != null ? "Member" : "Visitor")
                                        </td>
                                        <td>@donation.Type</td>
                                        <td>@donation.Date.ToString("d")</td>
                                        <td>@donation.Amount</td>
                                       
                                        </tr>
                                                                        }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
       
