<div class="page-wrapper">
    <div class="content">

        <div class="row">
            <div class="col-md-12">
                <b>This Month</b>
            </div>
            <div class="col-md-6 col-sm-6 col-lg-6 col-xl-3">
                <div class="dash-widget">
                    <span class="dash-widget-bg1"><i class="fa fa-money" aria-hidden="true"></i></span>
                    <div class="dash-widget-info text-right">
                        <h3>@Model.ThismonthDeposit</h3>
                        <span class="widget-title1">Deposit <i class="fa fa-check" aria-hidden="true"></i></span>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-sm-6 col-lg-6 col-xl-3">
                <div class="dash-widget">
                    <span class="dash-widget-bg2"><i class="fa fa-hand-peace-o"></i></span>
                    <div class="dash-widget-info text-right">
                        <h3>@Model.ThismonthDonation</h3>
                        <span class="widget-title2">Donation <i class="fa fa-check" aria-hidden="true"></i></span>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-sm-6 col-lg-6 col-xl-3">
