@page "/profile"
@model Church_App.Pages.ManagementSystem.ProfileModel
@{
    ViewData["Title"] = "Profile";
    Layout = "~/Pages/Shared/_HomeLayout.cshtml";
}

<div class="page-wrapper">
    <div class="content">
        <div class="row">
            <div class="col-sm-4 col-5">
                <h4 class="page-title">Profile</h4>
            </div>
            <div class="col-sm-8 col-7 text-right m-b-30">
              
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <form method="post" asp-page-handler="Updateprofile">
                    <div class="form-group">
                        <label asp-for="ProfileInput.FirstName"></label>
                        <input asp-for="ProfileInput.FirstName" class="form-control" />
                        <span asp-validation-for="ProfileInput.FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ProfileInput.Email"></label>
                        <input asp-for="ProfileInput.Email" class="form-control" readonly />
                    </div>
                    <div class="form-group">
                        <label asp-for="ProfileInput.NewPassword">New Password</label>
                        <input asp-for="ProfileInput.NewPassword" class="form-control" type="password" />
                        <span asp-validation-for="ProfileInput.NewPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ProfileInput.ConfirmPassword">Confirm Password</label>
                        <input asp-for="ProfileInput.ConfirmPassword" class="form-control" type="password" />
                        <span asp-validation-for="ProfileInput.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Update</button>
                </form>

         

            </div>
        </div>
    </div>


