@page "/banks"

@model Church_App.Pages.ManagementSystem.BanksPageModel
@{
    ViewData["Title"] = "Banks Management";
    Layout = "~/Pages/Shared/_HomeLayout.cshtml";
}

<div class="page-wrapper">
    <div class="content">
        <div class="row">
            <div class="col-sm-4 col-5">
                <h4 class="page-title">Banks</h4>
            </div>
            <div class="col-sm-8 col-7 text-right m-b-30">
                <button class="btn btn-primary btn-rounded float-right" data-bs-toggle="modal" data-bs-target="#addBankModal">
                    <i class="fa fa-plus"></i> Add Bank
                </button>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="table-responsive">
                    <table class="table table-striped custom-table datatable">
                        <thead>
                            <tr>
                                <th>Bank Name</th>
                                <th>Address</th>
                                <th>City</th>
                                <th>State</th>
                                <th>Zip</th>
                                <th>Phone</th>
                                <th>Contact</th>
                                <th>Account #</th>
                                <th>Routing #</th>
                                <th class="text-right">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var bank in Model.BankList)
                            {
                                <tr>
                                    <td>@bank.BankName</td>
                                    <td>@bank.Address</td>
                                    <td>@bank.City</td>
                                    <td>@bank.State</td>
                                    <td>@bank.Zip</td>
                                    <td>@bank.Phone</td>
                                    <td>@bank.Contact</td>
                                    <td>@bank.AccountNumber</td>
                                    <td>@bank.RoutingNumber</td>
                                    <td class="text-right">
                                        <div class="dropdown dropdown-action">
                                            <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown">
                                                <i class="fa fa-ellipsis-v"></i>
                                            </a>
                                            <div class="dropdown-menu dropdown-menu-right">
                                                <a class="dropdown-item" href="#" onclick='editBank(@Html.Raw(Json.Serialize(bank)))'>
                                                    <i class="fa fa-pencil"></i> Edit
                                                </a>
                                                <a class="dropdown-item text-danger" href="#" onclick="confirmDeleteBank('@bank.Id')">
                                                    <i class="fa fa-trash"></i> Delete
                                                </a>

                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                            <!-- More bank entries here -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Delete Confirmation Modal -->
    <div id="delete_bank" class="modal fade delete-modal" role="dialog">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <form method="post" asp-page-handler="DeleteBank">
                    <div class="modal-body text-center">
                        <img src="/assets/img/sent.png" alt="" width="50" height="46">
                        <h3>Are you sure you want to delete this bank?</h3>
                        <input type="hidden" name="bankId" id="deleteBankId" />
                        <div class="m-t-20">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>


<!-- Add Bank Modal -->
<div id="addBankModal" class="modal fade" role="dialog">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <form method="post" asp-page-handler="AddBank">
                <div class="modal-header">
                    <h4 class="modal-title">Add Bank</h4>
                    <button type="button" class="close" data-bs-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <input type="hidden" asp-for="BankAccount.Id" />
                    <div class="row">
                        <div class="col-md-4 form-group">
                            <label asp-for="BankAccount.BankName"></label>
                            <input asp-for="BankAccount.BankName" class="form-control" />
                            <span asp-validation-for="BankAccount.BankName" class="text-danger"></span>
                        </div>

                        <div class="col-md-8 form-group">
                            <label asp-for="BankAccount.Address"></label>
                            <input asp-for="BankAccount.Address" class="form-control" />
                            <span asp-validation-for="BankAccount.Address" class="text-danger"></span>
                        </div>

                        <div class="col-md-3 form-group">
                            <label asp-for="BankAccount.City"></label>
                            <input asp-for="BankAccount.City" class="form-control" />
                            <span asp-validation-for="BankAccount.City" class="text-danger"></span>
                        </div>
                        <div class="col-md-3 form-group">
                            <label asp-for="BankAccount.State"></label>
                            <input asp-for="BankAccount.State" class="form-control" />
                            <span asp-validation-for="BankAccount.State" class="text-danger"></span>
                        </div>
                        <div class="col-md-3 form-group">
                            <label asp-for="BankAccount.Zip"></label>
                            <input asp-for="BankAccount.Zip" class="form-control" />
                            <span asp-validation-for="BankAccount.Zip" class="text-danger"></span>
                        </div>

 @*                        <div class="col-md-3 form-group">
                            <label asp-for="BankAccount.Phone"></label>
                            <input asp-for="BankAccount.Phone" class="form-control" />
                            <span asp-validation-for="BankAccount.Phone" class="text-danger"></span>
                        </div> *@

                            <div class="col-md-3 form-group">
                                <label asp-for="BankAccount.Phone"></label>
                                <input asp-for="BankAccount.Phone" class="form-control" id="visitorPhone" oninput="applyPhoneMask(this)" />
                                <span asp-validation-for="BankAccount.Phone" class="text-danger"></span>
                            </div>

                            <script>
                                function applyPhoneMask(input) {
                                    // Remove all non-numeric characters
                                    let value = input.value.replace(/\D/g, '');

                                    // Apply the masking format
                                    if (value.length <= 1) {
                                        input.value = '+' + value;
                                    } else if (value.length <= 4) {
                                        input.value = '+1 (' + value.substring(1);
                                    } else if (value.length <= 7) {
                                        input.value = '+1 (' + value.substring(1, 4) + ') ' + value.substring(4);
                                    } else if (value.length <= 10) {
                                        input.value = '+1 (' + value.substring(1, 4) + ') ' + value.substring(4, 7) + '-' + value.substring(7);
                                    } else {
                                        input.value = '+1 (' + value.substring(1, 4) + ') ' + value.substring(4, 7) + '-' + value.substring(7, 10);
                                    }
                                }
                            </script>

                        <div class="col-md-3 form-group">
                            <label asp-for="BankAccount.Contact"></label>
                            <input asp-for="BankAccount.Contact" class="form-control" />
                            <span asp-validation-for="BankAccount.Contact" class="text-danger"></span>
                        </div>

                        <div class="col-md-3 form-group">
                            <label asp-for="BankAccount.AccountNumber"></label>
                            <input asp-for="BankAccount.AccountNumber" class="form-control" />
                            <span asp-validation-for="BankAccount.AccountNumber" class="text-danger"></span>
                        </div>
                        <div class="col-md-3 form-group">
                            <label asp-for="BankAccount.RoutingNumber"></label>
                            <input asp-for="BankAccount.RoutingNumber" class="form-control" />
                            <span asp-validation-for="BankAccount.RoutingNumber" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Add</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>


<!-- Edit Bank Modal -->
<div id="editBankModal" class="modal fade" role="dialog">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <form method="post" asp-page-handler="EditBank">
                <div class="modal-header">
                    <h4 class="modal-title">Edit Bank</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <input type="hidden" asp-for="BankAccount.Id" id="editBankId" />
                    <div class="row">
                        <!-- Repeat same fields as Add Modal with ids -->
                        <div class="col-md-4 form-group">
                            <label>Bank Name</label>
                            <input asp-for="BankAccount.BankName" class="form-control" id="editBankName" />
                        </div>
                        <div class="col-md-8 form-group">
                            <label>Address</label>
                            <input asp-for="BankAccount.Address" class="form-control" id="editAddress" />
                        </div>
                        <div class="col-md-3 form-group">
                            <label>City</label>
                            <input asp-for="BankAccount.City" class="form-control" id="editCity" />
                        </div>
                        <div class="col-md-3 form-group">
                            <label>State</label>
                            <input asp-for="BankAccount.State" class="form-control" id="editState" />
                        </div>
                        <div class="col-md-3 form-group">
                            <label>Zip</label>
                            <input asp-for="BankAccount.Zip" class="form-control" id="editZip" />
                        </div>
                        <div class="col-md-3 form-group">
                            <label>Phone</label>
                            <input asp-for="BankAccount.Phone" class="form-control" id="editPhone" />
                        </div>
                        <div class="col-md-3 form-group">
                            <label>Contact</label>
                            <input asp-for="BankAccount.Contact" class="form-control" id="editContact" />
                        </div>
                        <div class="col-md-3 form-group">
                            <label>Account #</label>
                            <input asp-for="BankAccount.AccountNumber" class="form-control" id="editAccountNumber" />
                        </div>
                        <div class="col-md-3 form-group">
                            <label>Routing #</label>
                            <input asp-for="BankAccount.RoutingNumber" class="form-control" id="editRoutingNumber" />
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Update Bank</button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>


    <script>
        function editBank(bank) {
            document.getElementById("editBankId").value = bank.id;
            document.getElementById("editBankName").value = bank.bankName;
            document.getElementById("editAddress").value = bank.address;
            document.getElementById("editCity").value = bank.city;
            document.getElementById("editState").value = bank.state;
            document.getElementById("editZip").value = bank.zip;
            document.getElementById("editPhone").value = bank.phone;
            document.getElementById("editContact").value = bank.contact;
            document.getElementById("editAccountNumber").value = bank.accountNumber;
            document.getElementById("editRoutingNumber").value = bank.routingNumber;

            const modal = new bootstrap.Modal(document.getElementById('editBankModal'));
            modal.show();
        }

        function confirmDeleteBank(id) {
            document.getElementById("deleteBankId").value = id;
            const modal = new bootstrap.Modal(document.getElementById('delete_bank'));
            modal.show();
        }
    </script>
