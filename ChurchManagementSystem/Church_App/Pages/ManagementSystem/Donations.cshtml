                        <div class="form-group">
                            <label asp-for="Donation.Type"></label>
                            <select asp-for="Donation.Type" class="form-control">
                                <option>-- Select Type --</option>
                                @foreach (var type in Model.DonationTypes)
                                {
                                    <option value="@type.Name">@type.Name</option>
                                }
                            </select>
                            <span asp-validation-for="Donation.Type" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Donation.Amount"></label>
                            <input asp-for="Donation.Amount" class="form-control" />
                            <span asp-validation-for="Donation.Amount" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Donation.DueDate"></label>
                            <input asp-for="Donation.DueDate" type="date" class="form-control" />
                            <span asp-validation-for="Donation.DueDate" class="text-danger"></span>
                        </div>
                      
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">Save</button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Edit Donation Modal -->
    <div id="editDonation" class="modal fade" role="dialog">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">
                <form method="post" asp-page-handler="EditDonation">
                    <div class="modal-header">
                        <h4 class="modal-title">Edit Donation</h4>
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                    </div>
                    <div class="modal-body">
                        <input type="hidden" asp-for="Donation.Id" id="editDonationId" />
                      

                        <div class="form-group" id="editMemberDropdown">
                            <label asp-for="Donation.MemberId"></label>
                            <select asp-for="Donation.MemberId" class="form-control" id="editDonationMember">
                                <option>-- Select Donor --</option>
                                @foreach (var member in Model.Donors)
                                {
                                    <option value="@member.Id">@member.FName @member.LName</option>
                                }
                            </select>
         
                        </div>

                        

                        <div class="form-group">
                            <label asp-for="Donation.Type"></label>
                            <select asp-for="Donation.Type" class="form-control" id="editDonationType">
                                <option>-- Select Type --</option>
                                @foreach (var type in Model.DonationTypes)
                                {
                                    <option value="@type.Name">@type.Name</option>
                                }
                            </select>
                            <span asp-validation-for="Donation.Type" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Donation.Amount"></label>
                            <input asp-for="Donation.Amount" class="form-control" id="editDonationAmount" />
                            <span asp-validation-for="Donation.Amount" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Donation.DueDate"></label>
                            <input asp-for="Donation.DueDate" type="date" id="editDonationDate" class="form-control" />
                            <span asp-validation-for="Donation.DueDate" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">Save Changes</button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
     function editDonation(donation) {
        // Make sure the modal exists and the ID is correct
        console.log(donation); // Check if the donation object is correct

        // Set values for modal fields
        var modalId = document.getElementById("editDonation"); // Ensure this matches the modal ID
        if (modalId) {
            document.getElementById("editDonationId").value = donation.id;
            document.getElementById("editDonationMember").value = donation.memberId;
            document.getElementById("editDonationType").value = donation.type;
            document.getElementById("editDonationAmount").value = donation.amount;
              document.getElementById("editDonationDate").value = donation.duedate;
            // Show the modal
            var modal = new bootstrap.Modal(modalId);
            modal.show();
        } else {
            console.error("Modal not found: editDonation");
        }
    }


    function confirmDelete(id) {
        document.getElementById("deleteDonationId").value = id;
        var modal = new bootstrap.Modal(document.getElementById('delete_donation'));
        modal.show();
    }


